<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="match_parent"
        tools:context=".kasir.admin.UtamaActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Hi, Linda!"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgfoto"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/txtnama"
                android:background="@drawable/ic_baseline_power_settings_new_24" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Kasir"
                android:textSize="17dp"
                android:layout_below="@+id/txtnama"
                android:layout_toLeftOf="@id/imgfoto"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/biru"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/imgutama"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/biru"
            android:id="@+id/btninputpesanan"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:text="INPUT PESANAN"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/biru"
            android:padding="10dp"
            android:id="@+id/btnlistpesanan"
            android:text="LIST PESANAN"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>