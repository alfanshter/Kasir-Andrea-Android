<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6E6E6"
    android:layout_marginTop="10dp"
    android:id="@+id/ly_voucher"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#E6E6E6"
        android:layout_height="65dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_kurir"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_marginBottom="17dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_jne"
                android:layout_width="74dp"
                android:visibility="gone"
                android:layout_height="30dp"
                android:background="@drawable/jne" />

            <ImageView
                android:id="@+id/img_pos"
                android:layout_width="70dp"
                android:visibility="gone"
                android:layout_height="47dp"
                android:background="@drawable/post" />


            <ImageView
                android:id="@+id/img_tiki"
                android:layout_width="86dp"
                android:layout_height="18dp"
                android:background="@drawable/tiki" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/lnend"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/img_kurir"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Express Next Day Barang"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Admin"
                android:id="@+id/txtdeskripsi"
                android:textColor="#A0A0A0"
                android:textSize="10dp" />
        </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/lnend"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="27dp"
           android:orientation="vertical">
           <TextView
               android:id="@+id/txtongkir"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/roboto_medium"
               android:text="Rp. 45.000"
               android:textColor="@color/black"
               android:textSize="16dp"
               android:textStyle="bold" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:fontFamily="@font/roboto_medium"
               android:text="10 Hari"
               android:id="@+id/txtpengiriman"
               android:layout_gravity="end"
               android:textColor="#A0A0A0"
               android:textSize="10dp" />
       </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>